<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/userHomePageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="420dp"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userHomePageText">

        <TextView
            android:id="@+id/friendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends" />

        <ImageButton
            android:id="@+id/friendsButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="25dp"
            android:scaleType="fitCenter"
            android:background="@android:color/holo_purple"
            android:src="@drawable/ic_friends_icon" />

        <TextView
            android:id="@+id/snipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snips" />

        <ImageButton
            android:id="@+id/snipsButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="25dp"
            android:scaleType="fitCenter"
            android:background="@android:color/holo_red_light"
            android:src="@drawable/ic_scissor_icon" />

        <TextView
            android:id="@+id/recordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Snip" />

        <ImageButton
            android:id="@+id/recordButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="25dp"
            android:scaleType="fitCenter"
            android:background="@android:color/holo_green_light"
            android:src="@drawable/ic_microphone_icon"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>